{
  "rules": [
    {
      "pattern": "fontes/frontend/.*\\.(js|ts|tsx|jsx)$",
      "category": "frontend",
      "cmd": "cd fontes/frontend && npm run test"
    },
    {
      "pattern": "fontes/backend/src/.*\\.(ts|js)$",
      "category": "backend",
      "cmd": "cd fontes/backend && npm run test"
    },
    {
      "pattern": "fontes/backend/.*\\.ts$",
      "category": "backend",
      "cmd": "cd fontes/backend && npm run test"
    },
    {
      "pattern": ".github/scripts/.*\\.sh$",
      "category": "scripts",
      "cmd": "echo 'Executando scripts internos...'"
    }
  ]
}
