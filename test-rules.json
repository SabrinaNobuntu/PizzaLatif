{
  "rules": [
    {
      "category": "frontend",
      "pattern": "^fontes/frontend/",
      "cmd": "cd fontes/frontend && npm ci && npm test -- --watchAll=false"
    },
    {
      "category": "backend",
      "pattern": "^fontes/backend/",
      "cmd": "cd fontes/backend && npm ci && npm test"
    },
    {
      "category": "python",
      "pattern": "\\.py$",
      "cmd": "pip install -r requirements.txt && pytest -q"
    }
  ]
}
